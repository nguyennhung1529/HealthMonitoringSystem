<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="20dp">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

            <LinearLayout
                style="@style/AppTheme.ItemContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/AppTheme.TextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today" />

                    <TextView
                        android:id="@+id/tvWaterTime"
                        style="@style/AppTheme.TextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/iw_water"
                    android:layout_width="143dp"
                    android:layout_height="144dp"
                    android:contentDescription="@string/water"
                    android:layout_marginTop="46dp"
                    app:srcCompat="@drawable/img_water" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="32dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="84dp"
                        android:contentDescription="@string/add"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_sub"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/img_plush" />

                    <ImageView
                        android:id="@+id/iv_sub"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="88dp"
                        android:contentDescription="@string/minus"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/img_sub" />

                    <TextView
                        android:id="@+id/content_waterDrinked"
                        android:layout_width="43dp"
                        android:layout_height="66dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="24dp"
                        android:ems="1"
                        android:text="@string/enter_water_drinked"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/iv_add"
                        app:layout_constraintStart_toEndOf="@+id/iv_sub"
                        app:layout_constraintTop_toTopOf="@+id/iv_sub" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/ly"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/content_waterDrinked" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>