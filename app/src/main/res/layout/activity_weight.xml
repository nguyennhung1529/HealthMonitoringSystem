    <ImageView
        android:id="@+id/iv_scale"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="164dp"
        android:contentDescription="@string/weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_balance" />

    <LinearLayout
        android:id="@+id/layout_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_scale">
        <TextView
            android:id="@+id/lbl_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_nang"
            android:textSize="@dimen/fontsize_content"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="weight"
            android:hint="@string/hint_weight"
            android:textColorHint="#757575"
            android:textSize="@dimen/fontsize_content"
            android:textStyle="bold"
            android:ems="2"
            android:inputType="numberDecimal"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:labelFor="@+id/iv_scale"/>

        <TextView
            android:id="@+id/tv_donvido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/kg"
            android:textSize="@dimen/fontsize_content"
            android:textStyle="bold" />

    </LinearLayout>

