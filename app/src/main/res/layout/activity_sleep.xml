<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepActivity">

    <LinearLayout
        android:id="@+id/layout_article_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc"
                app:srcCompat="@drawable/img_back_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/article_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/article_heading_sleep"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fontsize_article_heading"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iw_sleeping"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="164dp"
        android:contentDescription="@string/desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_clock" />

    <LinearLayout
        android:id="@+id/layout_sleepTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iw_sleeping">

        <TextView
            android:id="@+id/lbl_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thoi_gian_di_ngu"
            android:textSize="@dimen/fontsize_content"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_sleepTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="sleep time"
            android:hint="@string/hint_sleep_time"
            android:ems="3"
            android:inputType="time"
            android:textSize="@dimen/fontsize_content"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:labelFor="@+id/lbl_sleep"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_wakeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_sleepTime">

        <TextView
            android:id="@+id/lbl_wakeup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thoi_gian_thuc_day"
            android:textSize="@dimen/fontsize_content"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_wakeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="wake time"
            android:hint="@string/hint_wake_time"
            android:ems="3"
            android:inputType="time"
            android:textSize="@dimen/fontsize_content"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:labelFor="@+id/lbl_wakeup"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>